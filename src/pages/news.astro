---
import Layout from '../layouts/Layout.astro';
import SectionContainer from "../components/SectionContainer.astro";
import TitleSection from "../components/TitleSection.astro";
import ProfileCheck from "../assets/ProfileCheck.astro";
import NewsCard from "../components/NewsCard.astro";

// Datos de ejemplo para las noticias - estos deben coincidir con los de [id].astro
const noticias = [
  {
    id: "victoria-juvenil",
    titulo: '¡Victoria épica del equipo juvenil!',
    descripcion: 'El equipo juvenil ganó 85-82 en un partido increíble...',
    fecha: '15 abril 2025',
    imagen: '/images/noticia1.jpg',
  },
  {
    id: "campus-verano",
    titulo: 'Campus de verano 2025: ¡Inscríbete ya!',
    descripcion: 'Ya están abiertas las inscripciones para nuestro campus.',
    fecha: '10 abril 2025',
    imagen: '/images/noticia2.jpg',
  }
];
---
<Layout title="Noticias" description="Últimas noticias del club">
  <main class="px-4 py-24 space-y-24">
    <SectionContainer id="noticias">
      <TitleSection>
        <ProfileCheck class="size-8" />
        Noticias del club
      </TitleSection>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
        {noticias.map((noticia) => (
          <div class="flex flex-col h-full">
            <NewsCard 
              titulo={noticia.titulo}
              descripcion={noticia.descripcion}
              imagen={noticia.imagen}
              fecha={noticia.fecha}
              id={noticia.id}
            />
          </div>
        ))}
      </div>
    </SectionContainer>
  </main>
</Layout>