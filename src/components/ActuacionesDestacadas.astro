<div class="actuaciones-destacadas">
  <div class="mb-6 flex justify-between items-center">
    <h3 class="text-xl font-semibold text-green-300">Jornada {jornada.numero} - {jornada.fecha}</h3>
  </div>
  
  <!-- SECCIÓN MASCULINA -->
  <div class="mb-8">
    <div class="flex items-center mb-4 border-b border-green-700 pb-2">
      <div class="w-2 h-6 bg-blue-500 mr-3 rounded"></div>
      <h4 class="text-lg font-semibold text-white">Sección Masculina</h4>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {actuacionesMasculino.map((actuacion) => (
        <div class="bg-green-950 border border-green-800 rounded-xl overflow-hidden shadow-lg">
          <div class="bg-green-800/50 px-4 py-2">
            <span class="text-sm font-medium text-green-200">{actuacion.equipo}</span>
          </div>
          
          <div class="p-4">
            <div class="flex items-center mb-3">
              <div class="w-12 h-12 bg-green-700 rounded-full flex items-center justify-center mr-3">
                <span class="text-lg font-bold text-white">{actuacion.jugador.charAt(0)}</span>
              </div>
              <div>
                <h5 class="font-bold text-white">{actuacion.jugador}</h5>
                <p class="text-sm text-green-300">{actuacion.estadisticas}</p>
              </div>
            </div>
            
            <div class="mt-2 bg-green-800/30 p-3 rounded text-sm text-gray-300">
              <span class="font-semibold text-green-400">Destacado:</span> {actuacion.destacado}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  
