<form action="https://formsubmit.co/TU_EMAIL@ejemplo.com" method="POST" class="bg-green-900 border border-green-700 rounded-xl p-6 space-y-4 mt-4">
    <input type="hidden" name="_captcha" value="false" />
    <label class="block">
      <span class="text-sm text-green-200">Nombre y apellidos</span>
      <input name="nombre" type="text" required class="w-full p-2 rounded bg-green-950 border border-green-700 text-white" />
    </label>
    <label class="block">
      <span class="text-sm text-green-200">Correo electr√≥nico</span>
      <input name="email" type="email" required class="w-full p-2 rounded bg-green-950 border border-green-700 text-white" />
    </label>
    <label class="block">
      <span class="text-sm text-green-200">Mensaje</span>
      <textarea name="mensaje" rows="4" required class="w-full p-2 rounded bg-green-950 border border-green-700 text-white"></textarea>
    </label>
    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-xl">
      Enviar
