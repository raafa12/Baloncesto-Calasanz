---
import Badge from "../components/Badge.astro"
import InstagramIcon from "../assets/Instagram.astro"
import TwitterIcon from "../assets/Twitter.astro"
import MailIcon from "../assets/Mail.astro"
import PhoneIcon from "../assets/Phone.astro"
import SocialPill from "../components/SocialPill.astro"
---

<div class="max-w-xl mx-auto flex flex-col items-center text-center">
  <div class="flex flex-col items-center text-center sm:text-left sm:flex-row gap-4 mb-6">
    <img
      class="rounded-full shadow-lg size-20 sm:size-24 ring-2 ring-green-500/30"
      src="/images/LogoCalasanz.png"
      alt="Logo Club Baloncesto Calasanz"
    />
    <h1
      class="text-3xl font-bold tracking-tight text-white sm:text-4xl md:text-5xl"
    >
      Club Baloncesto Calasanz
    </h1>
  </div>

  <!-- Imagen de equipo femenino -->
  <div class="relative w-full mt-2 mb-6 overflow-hidden rounded-lg shadow-xl">
    <img
      class="w-full object-cover"
      src="/images/BanquilloFem.jpeg"
      alt="Equipo femenino de baloncesto Calasanz"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
    <div class="absolute bottom-3 left-4 text-white text-sm font-medium">
    </div>
  </div>
  
  <p
    class="mt-2 text-xl text-gray-300 [&>strong]:text-green-400 [&>strong]:font-semibold text-left"
  >
     +50 años <strong>formando personas</strong> a través del deporte.
  </p>
  <nav class="flex flex-wrap justify-center gap-4 mt-8">
    <SocialPill href="mailto:clubdeportivocalasanzsantander@hotmail.com">
      <MailIcon class="size-4" />
      Escríbenos
    </SocialPill>
    <SocialPill href="tel:606134150">
      <PhoneIcon class="size-4" />
      Llámanos
    </SocialPill>
    <SocialPill href="https://www.instagram.com/cbcalasanz/">
      <InstagramIcon class="size-4" />
      Instagram
    </SocialPill>
    <SocialPill href="https://x.com/cbcalasanz?lang=es">
      <TwitterIcon class="size-4" />
      Twitter
    </SocialPill>
  </nav>
</div>