---
// src/components/TeamSection.astro
const { nombre, descripcion, imagen, miembros } = Astro.props;
---

<section class="bg-green-950 border border-green-800 rounded-xl overflow-hidden">
  <img src={imagen} alt={nombre} class="w-full h-64 object-cover" />
  <div class="p-6 space-y-4">
    <h2 class="text-2xl font-bold text-white">{nombre}</h2>
    <p class="text-gray-300">{descripcion}</p>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-4">
      {miembros.map((miembro) => (
        <div class="text-center">
          <img src={miembro.foto} alt={miembro.nombre} class="w-24 h-24 rounded-full mx-auto object-cover border border-green-700" />
          <h3 class="mt-2 text-white font-semibold">{miembro.nombre}</h3>
          <p class="text-green-300 text-sm">{miembro.rol}</p>
        </div>
      ))}
    </div>
  </div>
</section>


